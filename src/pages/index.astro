---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/main.astro";
import DiscordCard from "../components/DiscordCard.astro";
import ServerCard from "../components/ServerCard.astro";
---

<Layout>
  <div class="w-screen h-screen flex justify-center items-center bg-center bg-[url('/banner.webp')]">
    <div class="card backdrop-blur-lg bg-white/10 rounded-2xl shadow-lg overflow-hidden border border-2 border-white/20 transition-all duration-300 hover:shadow-xl hover:border-white/30">
      <div class="card-body max-sm:card-compact flex flex-col items-center">

        <img src="/dream.png" class="h-32 w-32" />
        <h1 class="text-3xl font-bold font-[Minecraft_Five]">Funasitien</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-2 py-2">
          <DiscordCard />
          <ServerCard />
        </div>
        
        <a class="btn border-0 w-full bg-gradient-to-r from-cyan-400 via-sky-400 to-teal-400 text-white hover:scale-103 duration-300  transition-all ease-out">
          <Icon name="tabler:globe" />
          Portfolio
        </a>
        
        <a class="btn border-0 w-full bg-[#9146FF] text-white hover:scale-103 duration-300  transition-all ease-out">
          <Icon name="tabler:brand-twitch" />
          Twitch
        </a>
        
        <a class="btn border-0 w-full bg-[#FF0000] text-white hover:scale-103 duration-300  transition-all ease-out">
          <Icon name="tabler:brand-youtube" />
          Youtube
          <span class="badge badge-xs base-300">
            FR
          </span>
        </a>
        
        <a class="btn border-0 w-full bg-[#FF0000] text-white hover:scale-103 duration-300  transition-all ease-out">
          <Icon name="tabler:brand-youtube" />
          Youtube
          <span class="badge badge-xs base-300">
            EN
          </span>
        </a>
        
        <a class="btn border-0 w-full bg-[#5865F2] text-white hover:scale-103 duration-300  transition-all ease-out">
          <Icon name="tabler:brand-discord" />
          Discord
        </a>
        
        <a class="btn border-0 w-full bg-[#FF5500] text-white hover:scale-103 duration-300  transition-all ease-out">
          <Icon name="tabler:brand-soundcloud" />
          SoundCloud
        </a>
        
      </div>
    </div>
  </div>
</Layout>